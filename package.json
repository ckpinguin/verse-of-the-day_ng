{
  "name": "verse-of-the-day",
  "version": "1.0.0",
  "license": "MIT",
  "engines": {
    "node:": "7.x"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0",
    "build": "ng build",
    "build:prod": "ng build --aot --prod",
    "server:dev": "nodemon server.js",
    "server:prod": "cross-env NODE_ENV=production node server.js",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "cov": "npm run cov:clean && npm run cov:generate",
    "cov:clean": "rimraf coverage",
    "cov:generate": "babel-node node_modules/.bin/isparta cover --report text --report html test/index.js",
    "validate": "npm run lint && npm run build && npm test",
    "validate-dev": "npm run lint && npm run build && npm test | faucet",
    "check": "npm run audit && npm run deps && npm outdated --depth 0"
  },
  "private": true,
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "@angular/common": "^2.4.0",
    "@angular/compiler": "^2.4.0",
    "@angular/core": "^2.4.0",
    "@angular/forms": "^2.4.0",
    "@angular/http": "^2.4.0",
    "@angular/platform-browser": "^2.4.0",
    "@angular/platform-browser-dynamic": "^2.4.0",
    "@angular/router": "^3.4.0",
    "babel-cli": "^6.24.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-register": "^6.24.0",
    "core-js": "^2.4.1",
    "cross-env": "^3.2.4",
    "express": "^4.15.2",
    "rxjs": "^5.1.0",
    "zone.js": "^0.7.6"
  },
  "devDependencies": {
    "@angular/cli": "1.0.0-rc.2",
    "@angular/compiler-cli": "^2.4.0",
    "@types/jasmine": "2.5.46",
    "@types/node": "~7.0.8",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.1.1",
    "babel-preset-stage-3": "^6.22.0",
    "codelyzer": "~3.0.0-beta.3",
    "eslint": "^3.17.1",
    "jasmine-core": "~2.5.2",
    "jasmine-spec-reporter": "~3.2.0",
    "karma": "~1.5.0",
    "karma-chrome-launcher": "~2.0.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^0.3.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-spec-reporter": "0.0.30",
    "nodemon": "^1.11.0",
    "protractor": "~5.1.0",
    "ts-node": "~2.1.0",
    "tslint": "~4.5.1",
    "typescript": "~2.2.1"
  }
}
